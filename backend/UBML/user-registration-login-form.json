{
  "id": "user-registration-login-form",
  "type": "response-form",
  "appearance": {
    "class": "user-registration-login-form",
    "style": "width: 400px; margin: 50px auto; padding: 30px; background: white; border-radius: 8px; box-shadow: 0 4px 20px rgba(0,0,0,0.1);"
  },
  "contents": [
    {
      "id": "form-header",
      "type": "component",
      "appearance": {
        "class": "form-header",
        "style": "text-align: center; margin-bottom: 30px;"
      },
      "contents": [
        {
          "id": "logo",
          "type": "component",
          "appearance": {
            "class": "logo",
            "style": "font-size: 28px; font-weight: bold; color: #ff6b35; margin-bottom: 10px;"
          },
          "contents": [],
          "visible": true
        },
        {
          "id": "title",
          "type": "component",
          "appearance": {
            "class": "title",
            "style": "font-size: 20px; color: #333;"
          },
          "contents": [],
          "visible": true
        }
      ],
      "visible": true
    },
    {
      "id": "username-input",
      "type": "input-group",
      "appearance": {
        "class": "username-input",
        "style": "margin-bottom: 20px;"
      },
      "label": "用户名/手机号",
      "placeholder": "请输入用户名或手机号",
      "required": true,
      "inputType": "input",
      "maxLength": 50,
      "enableClear": true,
      "visible": true,
      "binding": {
        "field": "username",
        "entity": "user"
      }
    },
    {
      "id": "password-input",
      "type": "input-group",
      "appearance": {
        "class": "password-input",
        "style": "margin-bottom: 20px;"
      },
      "label": "密码",
      "placeholder": "请输入密码",
      "required": true,
      "inputType": "password",
      "maxLength": 20,
      "enableClear": true,
      "enableViewPassword": true,
      "visible": true,
      "binding": {
        "field": "password",
        "entity": "user"
      }
    },
    {
      "id": "login-button",
      "type": "button",
      "appearance": {
        "class": "login-button",
        "style": "width: 100%; margin-bottom: 15px; background: #ff6b35; color: white;"
      },
      "text": "登录",
      "textAlign": "middle",
      "onClick": "handleUserLogin",
      "visible": true
    },
    {
      "id": "register-button",
      "type": "button",
      "appearance": {
        "class": "register-button",
        "style": "width: 100%; background: transparent; color: #ff6b35; border: 1px solid #ff6b35;"
      },
      "text": "注册新账号",
      "textAlign": "middle",
      "onClick": "handleUserRegistration",
      "visible": true
    }
  ],
  "visible": true,
  "labelAutoOverflow": false
}